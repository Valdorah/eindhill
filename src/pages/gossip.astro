---
import BaseLayout from "@/layout/baseLayout.astro";
import { Button } from "@/components/ui/button.tsx";

const pageTitle: string = "Gossip";
---

<BaseLayout pageTitle={pageTitle}>
    <section class="container">
        <h2>{pageTitle}</h2>
        <form class="flex flex-col gap-2">
            <textarea id="gossip" rows="6" name="gossip"></textarea>
            <Button type="submit" className="text-secondary w-full">
                Go !
            </Button>
        </form>

        <div id="content" class="mt-5"></div>
    </section>

    <template>
        <app-gossip-card>
            <div class="bg-secondary my-2 p-2 rounded-lg">
                <p></p>
                <div class="flex justify-end items-center gap-2">
                    <span class="hidden">Élement copié dans le presse papier !</span>
                    <Button size="sm" className="text-secondary">
                        Copie
                    </Button>
                    <Button size="sm" className="text-secondary">
                        Copie + $b$b
                    </Button>
                </div>
            </div>
        </app-gossip-card>
    </template>

    <script src="../scripts/gossip.js"></script>
</BaseLayout>
