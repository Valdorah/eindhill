---
import BaseLayout from "@/layout/baseLayout.astro";
import { Button } from "@/components/ui/button.tsx";

const pageTitle: string = "Vous êtes perdu ?";
---

<BaseLayout pageTitle={pageTitle}>
  <section
    class="h-full bg-[url(/images/personnages/vlad_drusvar.png)] bg-cover bg-center"
  >
    <div
      class="flex h-full w-full flex-col items-center justify-center gap-6 bg-black/50"
    >
      <p class="text-2xl">Vous êtes...</p>
      <p class="text-7xl text-primary">Perdu !</p>

      <a href="/">
        <Button size="lg" className="text-secondary">
          Revenir à l'accueil
        </Button>
      </a>
    </div>
  </section>
</BaseLayout>
